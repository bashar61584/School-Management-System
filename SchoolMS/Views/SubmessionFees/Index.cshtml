@model IEnumerable<SchoolMS.Models.SubmessionFee>

@{
    ViewBag.Title = "Index";
}
<p>
    @Html.ActionLink("Add New Fee", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Class List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Student Name
                        </th>
                        <th>
                            Class Title
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubmissionDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MonthsModels.Name)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Users.FullName)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentPromotes.Students.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentPromotes.Annuals.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubmissionDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MonthsModels.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Users.FullName)
                            </td>
                   

                                <td class="btn-group">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.SubmissionFeeID }, new { @class = "btn btn-primary" })
                                    @Html.ActionLink("Details", "Details", new { id = item.SubmissionFeeID }, new { @class = "btn btn-info" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.SubmissionFeeID }, new { @class = "btn btn-danger" })
                                </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
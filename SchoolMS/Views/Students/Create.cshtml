@model SchoolMS.Models.Student

@{
    ViewBag.Title = "Create";
}

<div class="card mb-4 shadow">
    <div class="card-body">

        @using (Html.BeginForm("Create", "Students", FormMethod.Post, new { enctype = "multipart/form-data" }))

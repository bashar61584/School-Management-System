@model SchoolMS.Models.Exame

@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card mb-4 shadow">
        <div class="card-header">
            Add New Exame
        </div>

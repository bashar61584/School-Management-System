@model IEnumerable<SchoolMS.Models.Annual>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("New Annual/ Promote Fee", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Annual / Promote Fee List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClassSections.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sessions.Name)
                        </th>
                      
                        <th>
                            @Html.DisplayNameFor(model => model.Fee)
                        </th>
                  
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Users.FullName)
                        </th>
                        <th>Action</th>
                    </tr>
                    </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassSections.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sessions.Name)
                            </td>
                         
                            <td>
                                @Html.DisplayFor(modelItem => item.Fee)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Users.FullName)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.AnnualID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Details", "Details", new { id = item.AnnualID }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.AnnualID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                    </tbody>
            </table>
        </div>
    </div>
</div>
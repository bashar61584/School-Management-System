@model IEnumerable<SchoolMS.Models.ClassSection>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Assign Section To Class", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Section To Class Assigning List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClassModels.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sections.SectionName)
                        </th>


                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Users.FullName)
                        </th>
                        <th>Action</th>
                    </tr>
                    </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassModels.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sections.SectionName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Users.FullName)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.ClassSectionID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Details", "Details", new { id = item.ClassSectionID }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.ClassSectionID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                    </tbody>
            </table>
        </div>
    </div>
</div>